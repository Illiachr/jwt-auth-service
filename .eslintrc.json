{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "space-before-function-paren": "off",
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "linebreak-style": ["error", "windows"],
    "comma-dangle": ["error", "never"]
  }
}
